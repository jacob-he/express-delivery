<table id="list-table" class="table table-striped table-bordered">
    <colgroup>
        <col style="width: 140px;" />
    </colgroup>
    <thead>
        <tr>
            <th>#
            </th>
            <th>部门
            </th>
        </tr>
    </thead>
    <tbody>
        <% for(var i = 0; i < departments.length; i++) { 
			var department = departments[i]; %>
        <tr class="tb-list">
            <td>
                <a href="#" data-id="<%= department._id %>" class="btn btn-primary">编辑</a>
                <a href="#" data-id="<%= department._id %>" class="btn btn-danger">删除
                </a>
            </td>
            <td>
                <%= department.name %>
            </td>
        </tr>
        <% } %>
    </tbody>
</table>
<div class="pagination">
    <ul>
        <% var pages = Math.ceil(count / size);
                    for(var k = 1; k <= pages; k += 1) { 
                    if(k === page) {
        %>
        <li class="active"><a href="javascript:void(0);"><%= k %></a></li>
        <% } else { %>
        <li data-page="<%= k %>"><a href="#"><%= k %></a></li>
        <% } } %>
    </ul>
</div>
